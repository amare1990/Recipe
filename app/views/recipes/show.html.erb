<p style="color: green"><%= notice %></p>

<%= render @recipe %>

<div id="recipe_foods">
  <%= render "recipe_foods/table_header" %>
  <% @recipe.recipe_foods.includes(:food).each do |recipe_food| %>
    <%= render partial: "recipe_foods/recipe_food", locals: {recipe_food: recipe_food} %>
  <% end %>
</div>

<div class="show-links">
  <%= link_to "Generate Shopping List", user_shopping_list_index_path(current_user), class:"black-btn" %>
  <%= link_to "Add ingredient", new_user_recipe_recipe_food_path(current_user, @recipe), class:"black-btn" %>
</div>
