<p style="color: green"><%= notice %></p>

<%= render @recipe %>

<div id="recipe_foods">
  <%= render "recipe_foods/table_header" %>
  <% @recipe.recipe_foods.each do |recipe_food| %>
    <%= render partial: "recipe_foods/recipe_food", locals: {recipe_food: recipe_food} %>
  <% end %>
</div>

<div class="show-links">
  <%= link_to "Edit", edit_user_recipe_path(current_user, @recipe), class:"black-btn" %>
  <%= link_to "Back", user_recipes_path(current_user), class:"black-btn" %>

  <%= button_to "Delete", user_recipe_path(current_user, @recipe), method: :delete, class:"black-btn" %>
</div>
